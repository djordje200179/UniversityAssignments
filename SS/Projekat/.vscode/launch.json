{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug assembler",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/assembler",
			"args": [
				"${workspaceFolder}/tests/main.s"
			],
			"stopAtEntry": false,
			"cwd": "${fileDirname}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Set Disassembly Flavor to Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				}
			]
		},
		{
			"name": "Debug linker",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/linker",
			"args": [
				"-hex",
				"-place=my_code@0x40000000",
				"-o",
				"${workspaceFolder}/tests/program.hex",
				"${workspaceFolder}/tests/main.o",
				"${workspaceFolder}/tests/isr_terminal.o",
				"${workspaceFolder}/tests/isr_timer.o",
				"${workspaceFolder}/tests/handler.o"
			],
			"stopAtEntry": false,
			"cwd": "${fileDirname}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Set Disassembly Flavor to Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				}
			]
		},
		{
			"name": "Debug emulator",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/emulator",
			"args": [
				"${workspaceFolder}/tests/program.hex",
			],
			"stopAtEntry": false,
			"cwd": "${fileDirname}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Set Disassembly Flavor to Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				}
			]
		}
	]
}